script(type="text/x-template")#skills-list
  ul.user-skills
    li.user-skills__item.skills-row(v-for="skill in skills" :key="skills.skillsGroup")
      skills-row(
        :skill="skill"
      )

script(type="text/x-template")#skills-row
  ul.skills-row__list
    h3.skills-row__title {{skill.skillsGroup}} 
    li.skills-row__item(v-for="skillPercent in skill.skills")
      span {{skillPercent}}
      skill(
        :skillName="skillName"
        :skillPercent="skillPercent"
      )

script(type="text/x-template")#skill
    .skill
      svg(viewBox="0 0 200 200" preserveAspectRatio="none").skill__shape
        circle(r="80" cx="100" cy="100").skill__circle.skill__circle--position--under
        circle(r="80" cx="100" cy="100" stroke="url(#gradient)").skill__circle.skill__circle--position--above
        linearGradient(id="gradient" x1="0%" y1="0%" x2="100%" y2="0")
          stop(offset="0%" stop-color="#5500f2")
          stop(offset="100%" stop-color="#8f00ef")
      .skill__title {{skillName}}
