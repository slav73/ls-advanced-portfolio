.about {
    display: flex;
    justify-content: center;
    padding-bottom: 100px;

    &__container {
        display: flex;
        justify-content: space-between;
        width: 60%;
        padding-top: 30px;
    }

    &__left {
        min-width: 30%;
        margin-right: 70px;
    }

    &__greet {
        margin-bottom: 30px;
    }

    &__title {
        font-size: 24px;
        font-weight: 700;
        margin-bottom: 30px;
    }

    &__text {
        margin-bottom: 60px;
    }
}

